doctype html
html(lang="en")
  head
    - var title = "Lightning Design System for Angular";
    - var description = "Native Angular components and directives for Lightning Design System";
    - var logo = "http://ng-lightning.github.io/ng-lightning/assets/images/shield.png";

    base(href="/")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="shortcut icon", type="image/x-icon", href="favicon.ico")
    title  ng-lightning - #{title}

    // Search Engine
    meta(name="description", content=`${description}: ${self.components}`)
    meta(name="image", content=logo)

    // Schema.org for Google
    meta(itemprop="name", content=title)
    meta(itemprop="description", content=`${description}: ${self.components}`)
    meta(itemprop="image", content=logo)

    // Twitter
    meta(name="twitter:card", content="summary")
    meta(name="twitter:title", content=title)
    meta(name="twitter:description", content=`${description}: ${self.components}`)

    // Open Graph general (Facebook, Pinterest & Google+)
    meta(property="og:title", content=title)
    meta(property="og:description", content=`${description}: ${self.components}`)
    meta(property="og:url", content="http://ng-lightning.github.io/ng-lightning")
    meta(property="og:site_name", content="ng-lightning")
    meta(property="og:locale", content="en")
    meta(property="og:type", content="website")
    meta(property="og:image", content=logo)
    meta(property="og:image:type", content="image/png")
    meta(property="og:image:width", content="554")
    meta(property="og:image:height", content="609")

    script(type="application/javascript", src="https://unpkg.com/svg4everybody")
    script(type="application/javascript").
      svg4everybody()
