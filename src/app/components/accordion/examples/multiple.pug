.slds-m-bottom_large
  button(nglButton, type="button", (click)="active = ['A', 'B', 'C']") Expand All
  button(nglButton, type="button", (click)="active = null") Collapse All

ul(ngl-accordion, [(activeName)]="active", multiple)
  ng-template(nglAccordionSection, name="A", label="Accordion Title A")
    | This is the content area for section A

  ng-template(nglAccordionSection, name="B", label="Accordion Title B")
    | This is the content area for section B

  ng-template(nglAccordionSection, name="C", label="Accordion Title C")
    | This is the content area for section C


.slds-m-top_large Active Section Name: <b>{{ active | json }}</b>
